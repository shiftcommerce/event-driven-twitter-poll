# frozen_string_literal: true

# enforce Ruby version
ruby '2.4'

# limit lookup to the official Rubygems repository
source 'https://rubygems.org'

# Ruby wrapper for Twitter's streaming API
gem 'twitter'

# optimised JSON parsing/rendering
gem 'oj'

# hosted web-sockets for pushing live updates
gem 'pusher'

# a small Ruby web framework
gem 'sinatra'

# Rack library for Sinatra to enforce HTTPS connections in production
gem 'rack-ssl'

# a concurrent Ruby webserver
gem 'puma'

# ActiveRecord ORM and PostgreSQL for persisting votes
gem 'activerecord'
gem 'standalone_migrations'
gem 'pg'

# load .env locally in development
gem 'dotenv', group: :development

# Kafka event stream library
gem 'ruby-kafka', '0.5.1'
